<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.InputDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_unklik"
            android:padding="10dp"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="81dp"
                android:layout_height="81dp"
                app:cardCornerRadius="100dp"
                app:cardBackgroundColor="@color/utama"
                >

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/cloud"
                    android:layout_gravity="center"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Gambar Kuis"
                android:textSize="20sp"
                android:textColor="@color/utama"
                android:fontFamily="@font/nexaheavy"
                />
        </LinearLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/utama"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Kuis"
            android:textColor="@color/utama"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:fontFamily="@font/nexaheavy"
            />

        <EditText
            android:id="@+id/judul_kuis"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_unklik"
            android:hint="judul kuis"
            android:padding="10dp"
            android:textColorHint="#89009C9E"
            android:textColor="@color/utama"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori Kuis"
            android:textColor="@color/utama"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:fontFamily="@font/nexaheavy"
            />

        <Spinner
            android:id="@+id/kategori_kuis"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_unklik"
            android:popupBackground="@color/white"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipe Kuis"
            android:textColor="@color/utama"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:fontFamily="@font/nexaheavy"
            />

        <Spinner
            android:id="@+id/tipe_kuis"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_unklik"
            android:popupBackground="@color/white"
            android:textColorHint="#89009C9E"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tingkat Kesulitan"
            android:textColor="@color/utama"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:fontFamily="@font/nexaheavy"
            />

        <Spinner
            android:id="@+id/tingkat_kesulitan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_unklik"
            android:popupBackground="@color/white"
            android:textColorHint="#89009C9E"
            />

        <Button
            android:id="@+id/selanjutnya"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_klik"
            android:text="Selanjutnya"
            android:fontFamily="@font/nexaheavy"
            android:textAllCaps="false"
            android:textColor="@color/utama"
            />

    </LinearLayout>
</ScrollView>
