<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/utama"
    tools:context=".Activity.ScoreActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_kembali"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:tint="#ffffff"
            />

        <TextView
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skor"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:fontFamily="@font/nexaheavy"
            android:layout_gravity="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logoapk" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Score Content Centered -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="70dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_score"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:text="Skor"
                android:textColor="@color/utama"
                android:fontFamily="@font/nexaheavy"
                android:gravity="center" />

            <TextView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="64sp"
                android:text="100"
                android:textColor="@color/utama"
                android:fontFamily="@font/nexaheavy"
                android:gravity="center" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_pembahasan"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_score"
            android:text="Lihat Pembahasan"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="@font/nexaheavy"
            android:textColor="@color/utama"
            android:paddingHorizontal="10dp" />
    </LinearLayout>

</LinearLayout>
