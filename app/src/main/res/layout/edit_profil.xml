<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginHorizontal="20dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_unklik"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profil"
            android:textSize="20dp"
            android:textColor="@color/utama"
            android:fontFamily="@font/nexaheavy"
            />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/profil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/userprofil"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/username"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="Username"
            android:backgroundTint="@color/utama"
            android:textColor="@color/utama"
            android:fontFamily="@font/nexaheavy"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:paddingHorizontal="20dp"
            android:backgroundTint="@color/utama"
            android:textColor="@color/utama"
            android:fontFamily="@font/nexaheavy"
            android:textSize="15sp" />

        <Button
            android:id="@+id/update"
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:paddingHorizontal="20dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_klik"
            android:text="Simpan Perubahan"
            android:textAllCaps="false"
            android:textColor="@color/utama"
            android:fontFamily="@font/nexaheavy"
            android:layout_gravity="center"
            android:textSize="14dp"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>