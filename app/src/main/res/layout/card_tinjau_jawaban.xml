<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_pertanyaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:background="@drawable/rounded_unklik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingBottom="10dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nexaheavy"
                android:paddingVertical="10dp"
                android:text="Pertanyaan"
                android:textColor="@color/utama"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/pertanyaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_unklik"
                android:hint="pertanyaan"
                android:padding="10dp"
                android:textColorHint="#89009C9E"
                android:textColor="@color/utama"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nexaheavy"
                android:paddingVertical="10dp"
                android:text="Grafik Jawaban"
                android:textColor="@color/utama"
                android:textSize="14sp" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pie_chart_jawaban"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="10dp"
                android:background="@drawable/rounded_unklik" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>